root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[bin/*]
indent_style = space
indent_size = 2

[*.{bash,zsh,sh}]
indent_style = space
indent_size = 2

[*.fish]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
